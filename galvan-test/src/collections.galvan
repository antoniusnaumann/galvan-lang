test "Collect iter into vector" {
    let v = [1, 2, 3, 4, 5, 6, 7, 8];
    let v = v
        .iter()
        .copied()
        .map(|x| x * 2)
        .filter(|x| x % 4 == 0)
        .vec();

    assert v == [4, 8, 12, 16]
}

test "Call functions on collection literal" {
    let v = [1, 2, 3, 4, 5, 6, 7, 8]
        .iter()
        .copied()
        .map(|x| x * 2)
        .filter(|x| x % 4 == 0)
        .vec();

    assert v == [4, 8, 12, 16]
}
